@charset "UTF-8";
/* CSS Document */

/* --------------------------- HTML TAG STYLES ----------------------------- */

body {
  margin: 0px; /* always zero out defaul browser margins and padding */
  padding: 0px;
  color: #000;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}
p {
  font-size: 14px;
  margin-bottom: 20px;
  line-height: 1.5em;
}
h1 {
  padding: 20px 0;
}
h4 {
  padding: 20px 0;
  font-weight: bold;
}
a:link {
	color: #fff;
}
a:visited {
	color: #fff;
}
a:hover {
	color: #000;
	text-decoration: none;
}

/* -------------------------- PAGE SECTIONS ---------------------------- */
/* Visual sections of page are defined below in order of presentation */  

#splash {
   	background: url(images/splash.jpg) no-repeat center top fixed;
   	background-size: cover;  
	height: 800px; /* dictates a taller section for title page allowing the background image to be seen */
	
}
/* Do noty dictate height for remaining sections since the content will dictate heights. */
#aboutme {
	padding: 40px 0 60px 0; /* top padding provides space for nav bar, bottom padding for asthetics */	
   	background-color: #fff;
	color: #000;
}


#portfolio {
	padding: 40px 0 60px 0;	
	background-color: #333; /* Section background color */
	color: #fff; /**/
}

#freelance {
	padding: 100px 0 100px 0;	
    background-color: #fff;;
	color: #000;
}

#footer{
  	background-color: #333;
  	color: #fff;
  	padding: 20px 0;

}

/* ----------------- About Me Section Styles ----------------- */
#aboutme p a{
	color: #000 /* Linkedin link color fix */
}
#aboutme ul li {
	padding: 8px 0;;
}

/* ----------------- Portfolio Section Styles ----------------- */

ul#portfolio_list a:link{
	color: #fff; /* link text color */
}
ul#portfolio_list a:visited{
	color: #fff; /* link text color */
}
ul#portfolio_list a:hover{
	color: #000; /* link text color */
}

/* ---------------- CONTAINER STYLES ----------------- */
/* Containers are used to keep the page content within bounds centered in the browser window. */
.container {
  width: 1500px; /* static width container always stays at this width no matter what the window size */
  margin: 0 auto;
  overflow: hidden;
}
.half_container { /* provides a two column presentation */
  width: 50%;
  float: left;
  overflow: hidden;
}

/* ----------------- NAVIGATION BAR STYLES -------------------*/ 

#navbar{
	position: fixed; /* navbar should always be shown even when page is scrolled */
	top: 0;
	width: 100%;
	height: 54px;
	background-color: #333; 
}	
/* horizontal menu bars are typically created using a styled unordered list. Here's how! */
ul#menu {
	list-style: none; /* eliminates bullets */
	/* adjust padding top to adjust nav bar vertical position */
	padding-top: 0px;
} 
ul#menu li {
	float: left; /* changes list from vertical to horizontal */
	padding-bottom: 20px;
} 
ul#menu li a.button {
	font-size: 16px;
	text-decoration: none;
	/* this padding defines the size of the buttons */
	padding: 15px 50px 15px 50px; 
}
/* change button color when mouse hovers over */
ul#menu li a.button:hover {
	background-color: #fff;
}  

/* ---------------- TITLE PAGE STYLES ------------------- */

#title-page{
  width: 100%;
  padding-top: 200px; /* provides a lot of space above title to view the background image */
  color: #fff;
  text-align: right;
}
#title-page h1 {
  font-family: 'Roboto', sans-serif; /* Roboto is a Google Font - see link in head of index.html */
  font-size: 80px; 	
  text-shadow: 4px 4px #000; /* Shadow helps text to stand out from background */
}
#title-page h3 {
  font-size: 1em;
  font-style: italic;
  margin: 0 40px;
  padding-bottom: 20px;
  text-shadow: 2px 2px #000;
}

/* ------------------- FOOTER CREDITS --------------------- */

#credits {
  text-align: center;	
}
#credits a {
  font-size: .8em;
  margin: 10px 0;
}

/* ---------------------- MISC -----------------------------*/

.fltright{
	float:right;
	margin: 20px;
}
.fltleft{
	float:left;
	margin: 20px 20px 20px 0;
}

* {box-sizing:border-box}